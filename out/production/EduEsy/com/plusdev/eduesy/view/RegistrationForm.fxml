<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="context" prefHeight="335.0" prefWidth="787.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.plusdev.eduesy.controller.RegistrationFormController">
   <children>
      <Label layoutX="23.0" layoutY="13.0" prefHeight="41.0" prefWidth="217.0" text="New Registration" textFill="#604bcd">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Separator layoutX="14.0" layoutY="63.0" prefHeight="7.0" prefWidth="732.0" />
      <Button layoutX="618.0" layoutY="15.0" mnemonicParsing="false" onAction="#backToHomeOnAction" style="-fx-background-color: #000057;" text="Back to Home" textFill="WHITE">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
      <TextField fx:id="txtRegId" layoutX="14.0" layoutY="87.0" promptText="Registration Id">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </TextField>
      <ComboBox fx:id="cmbPrograms" layoutX="532.0" layoutY="87.0" prefHeight="39.0" prefWidth="217.0" promptText="Program" />
      <Label layoutX="14.0" layoutY="156.0" prefHeight="41.0" prefWidth="217.0" text="Payment Status" textFill="#e80ce4">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <RadioButton fx:id="rbtnPayed" layoutX="81.0" layoutY="208.0" mnemonicParsing="false" selected="true" text="Payed">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
         <toggleGroup>
            <ToggleGroup fx:id="payment" />
         </toggleGroup>
      </RadioButton>
      <RadioButton layoutX="80.0" layoutY="250.0" mnemonicParsing="false" text="Pending" toggleGroup="$payment">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </RadioButton>
      <Button layoutX="532.0" layoutY="226.0" mnemonicParsing="false" onAction="#registerOnAction" prefHeight="48.0" prefWidth="217.0" style="-fx-background-color: #23A9F2;" text="Register" textFill="WHITE">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Button>
      <TextField fx:id="txtSearchStudent" layoutX="266.0" layoutY="88.0" prefHeight="38.0" prefWidth="253.0" promptText="Student">
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
      </TextField>
   </children>
</AnchorPane>
